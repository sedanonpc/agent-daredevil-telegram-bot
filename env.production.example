# ===========================================
# Agent Daredevil - Production Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE TELEGRAM CONFIGURATION
# ===========================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890

# ===========================================
# LLM PROVIDER CONFIGURATION
# ===========================================
# Choose your LLM provider: openai, gemini, or vertex_ai
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Google Cloud Vertex AI Configuration
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-service-account.json
VERTEX_AI_MODEL=google/gemini-2.0-flash-001

# ===========================================
# MEMORY AND SESSION CONFIGURATION
# ===========================================
USE_MEMORY=True
MEMORY_DB_PATH=/app/data/memory.db
SESSION_TIMEOUT_HOURS=24
MAX_SESSION_MESSAGES=50

# ===========================================
# RAG (RETRIEVAL AUGMENTED GENERATION) CONFIGURATION
# ===========================================
USE_RAG=True
CHROMA_DB_PATH=/app/data/chroma_db
CHARACTER_CARD_PATH=/app/cryptodevil.character.json

# ===========================================
# VOICE PROCESSING CONFIGURATION
# ===========================================
# ElevenLabs API for text-to-speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here
USE_VOICE_FEATURES=True
ELEVENLABS_MODEL=eleven_monolingual_v1
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.5

# ===========================================
# WEB CRAWLER CONFIGURATION
# ===========================================
CRAWLER_DB_PATH=/app/data/basketball_crawler.db
CRAWLER_MAX_PAGES=100
CRAWLER_DELAY=4.0
CRAWLER_THREADS=2

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Port configuration (Railway will set PORT automatically)
PORT=8000

# Python configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app

# Logging configuration
DEBUG=False
LOG_LEVEL=INFO

# ===========================================
# RAILWAY SPECIFIC CONFIGURATION
# ===========================================
# Railway will automatically set these, but you can override if needed
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your_project_id
# RAILWAY_SERVICE_ID=your_service_id

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Add any additional security-related environment variables here
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# MONITORING AND ANALYTICS
# ===========================================
# Optional: Add monitoring service API keys
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# ===========================================
# EXTERNAL SERVICE INTEGRATIONS
# ===========================================
# Add any additional external service configurations
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:pass@localhost/dbname
