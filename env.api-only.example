# ===========================================
# Agent Daredevil - API-Only Environment
# ===========================================
# Optimized for frontend TTS and API-only deployment

# Core LLM Configuration
LLM_PROVIDER=gemini
OPENAI_API_KEY=your_openai_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here

# Model Configuration
GEMINI_MODEL=gemini-1.5-pro
OPENAI_MODEL=gpt-4

# API-Only Optimizations
USE_VOICE_FEATURES=False
USE_RAG=True
USE_MEMORY=True
DEBUG=False

# RAG Configuration
CHROMA_DB_PATH=./chroma_db
CHARACTER_CARD_PATH=./cryptodevil.character.json

# Memory Configuration
MEMORY_DB_PATH=./memory.db
SESSION_TIMEOUT_HOURS=24
MAX_SESSION_MESSAGES=50

# Server Configuration
PORT=8000
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Optional: Voice Processing (Disabled for API-only)
