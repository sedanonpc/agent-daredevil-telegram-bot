# ===========================================
# Agent Daredevil Telegram Bot Configuration
# ===========================================

# Telegram API Credentials
# Get these from: https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890

# ===========================================
# OpenAI Configuration  
# ===========================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Memory System Configuration
# ===========================================

# Memory Database Path
MEMORY_DB_PATH=./memory.db

# Enable/Disable Memory System
USE_MEMORY=True

# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# Maximum messages per session before summarization
MAX_SESSION_MESSAGES=50

# ===========================================
# RAG & Database Configuration
# ===========================================

# Vector Database Path
CHROMA_DB_PATH=./chroma_db

# Enable/Disable RAG System
USE_RAG=True

# Character Configuration
CHARACTER_CARD_PATH=./cryptodevil.character.json

# ===========================================
# Web Crawler Configuration
# ===========================================

# Database path for crawler
CRAWLER_DB_PATH=./basketball_crawler.db

# Default crawl settings
CRAWLER_MAX_PAGES=100
CRAWLER_DELAY=4.0
CRAWLER_THREADS=2

# ===========================================
# Voice Processing Configuration
# ===========================================

# ElevenLabs API Key
# Get from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID
# Use specific voice ID for consistent voice
ELEVENLABS_VOICE_ID=your_voice_id_here

# Enable/Disable Voice Features
USE_VOICE_FEATURES=True

# ElevenLabs Model (default: eleven_monolingual_v1)
ELEVENLABS_MODEL=eleven_monolingual_v1

# Voice Settings
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.5

# ===========================================
# Development Settings
# ===========================================

# Debug mode
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO 